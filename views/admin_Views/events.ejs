<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/x-icon" href="https://images.squarespace-cdn.com/content/v1/5b5a266fcef372310148d6d6/1532843250594-O9ODAV19O8HYI57VCZ1G/favicon.ico?format=100w"/>
  <title>Executed Events</title>
  <div class="search-container">
    <div class="search-container">
      <input 
        type="text" 
        class="search-input" 
        id="searchBox" 
        placeholder="Search" 
        oninput="liveSearch(this.value)">
    </div>
  </div>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
      margin: 20px 0;
    }
    table, th, td {
      border: 1px solid #ddd;
    }
    th, td {
      padding: 10px;
      text-align: left;
    }
    th {
      background-color: #f4f4f4;
    }
  </style>
</head>

<!-- Buttons to filter by status -->
<div class="eventBtnContainer">
  <button class="eventBtn" onclick="window.location.href='/events?status=pending'">Pending</button>
  <button class="eventBtn" onclick="window.location.href='/events?status=approved'">Approved</button>
  <button class="eventBtn" onclick="window.location.href='/events?status=finished'">Finished</button>
</div>

<script>
  function formatDate(dateString) {
    if (!dateString) return ''; // Handle empty or undefined dates
    const date = new Date(dateString);
    const options = { 
      weekday: 'long', 
      year: 'numeric', 
      month: 'long', 
      day: 'numeric', 
      hour: 'numeric', 
      minute: 'numeric' 
    };
    return date.toLocaleString('en-US', options);
  }
</script>


<table>
  <thead>
    <% if (status === 'finished') { %>
      <!-- Columns for executed_events -->
      <tr>
        <th>Actual Start Date</th>
        <th>Actual Start Time</th>
        <th>Organization</th>
        <th>Actual Duration</th>
        <th>Actual Number of People</th>
        <th>Type Description</th> 
        <th>Pockets</th>
        <th>Collars</th>
        <th>Envelopes</th>
        <th>Vests</th>
        <th>Items Completed</th>
        <th>Actual End Date</th>
      </tr>
    <% } else { %>
      <!-- Columns for requested_events -->
      <tr>
        <th>Estimated Date</th>
        <th>Organization</th>
        <th>Status</th>
        <th>Contact Name</th>
        <th>Phone</th>
        <th>Street Address</th>
        <th>Location</th>
        <th>Estimated Start Time</th>
        <th>Estimated Duration</th>
        <th>Type Description</th> 
        <th>Location Size</th>
        <th>Estimated Number of Adults</th>
        <th>Estimated Number of Youth</th>
        <th>Estimated Number of Children</th>
        <th>Number of Machines</th>
        <th>Share Story</th>
        <th>Story Minutes</th>
        <th>Number of Tables</th>
        <th>Table Shape</th>
        <th>Additional Notes</th>
      </tr>
    <% } %>
  </thead>
  <tbody>
    <% events.forEach(event => { %>
      <tr class="editable-row" 
          data-id="<%= event.contact_id %>" 
          data-email="<%= event.email %>"
          data-first-name="<%= event.first_name %>"
          data-last-name="<%= event.last_name %>"
          data-entity="event">
        <% if (status === 'finished') { %>
          <!-- Display columns for executed_events -->
          <td><script>document.write(formatDate('<%= event.actual_start_date %>'))</script></td>
          <td><%= event.actual_start_time %></td>
          <td><%= event.organization %></td>
          <td><%= event.actual_duration %></td>
          <td><%= event.actual_num_people %></td>
          <td><%= event.type_description %></td> 
          <td><%= event.pockets %></td>
          <td><%= event.collars %></td>
          <td><%= event.envelopes %></td>
          <td><%= event.vests %></td>
          <td><%= event.items_completed %></td>
          <td><script>document.write(formatDate('<%= event.actual_end_date %>'))</script></td>
          <% } else { %>
          <!-- Display columns for requested_events -->
          <td><script>document.write(formatDate('<%= event.estimated_date %>'))</script></td>
          <td><%=event.organization %></td>
          <td><%= event.status %></td>
          <td><%= event.first_name %> <%= event.last_name %></td>
          <td><%= event.phone %></td>
          <td><%= event.street_address %></td>
          <td><%= event.city %>, <%= event.state %> <%= event.zip %></td>
          <td><%= event.estimated_start_time %></td>
          <td><%= event.estimated_duration %></td>
          <td><%= event.type_description %></td> 
          <td><%= event.loc_size %></td>
          <td><%= event.estimated_num_adults %></td>
          <td><%= event.estimated_num_youth %></td>
          <td><%= event.estimated_num_children %></td>
          <td><%= event.num_machines %></td>
          <td><%= event.share_story %></td>
          <td><%= event.story_minutes %></td>
          <td><%= event.num_tables %></td>
          <td><%= event.table_shape %></td>
          <td><%= event.additional_notes %></td>
        <% } %>
      </tr>
    <% }) %>
  </tbody>
</table>
</body>
</html>




