<!-- Example Table of Volunteers -->
<!-- Single search bar -->
<div class="search-container">
  <input 
    type="text" 
    id="searchBox" 
    placeholder="Search" 
    oninput="liveSearch(this.value)">
</div>

<div id="searchResults"></div>

<table id="mainTable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Sewing Level</th>
      <th>Hours Willing</th>
    </tr>
  </thead>
  <tbody>
    <% if (typeof volunteers !== 'undefined' && volunteers && volunteers.length > 0) { %>
      <% volunteers.forEach(function(volunteer) { %>
        <tr class="editable-row"
          data-id="<%= volunteer.contact_id %>"
          data-first-name="<%= volunteer.first_name %>"
          data-last-name="<%= volunteer.last_name %>"
          data-email="<%= volunteer.email %>"
          data-phone="<%= volunteer.phone %>"
          data-sewing-level="<%= volunteer.sewing_level %>"
          data-hours-willing="<%= volunteer.hours_willing %>"
          data-entity="volunteer"
        >
          <td><%= volunteer.first_name %> <%= volunteer.last_name %></td>
          <td><%= volunteer.email %></td>
          <td><%= volunteer.phone || 'Not Set' %></td>
          <td><%= volunteer.level_description || 'Not Set' %></td>
          <td><%= volunteer.hours_willing || 'Not Set' %></td>
        </tr>
      <% }); %>
    <% } else { %>
      <tr>
        <td colspan="5">No volunteers found</td>
      </tr>
    <% } %>
  </tbody>
</table>


<!-- Modal Template -->
<%- include('../components/modal', {
  title: 'Edit Volunteer',
  formAction: '/update-volunteer',
  body: `
  <div class="input-field">
    <input id="entity-first-name" type="text" name="firstName" placeholder="First Name" required>
    <label for="entity-first-name"></label>
  </div>
  <div class="input-field">
    <input id="entity-last-name" type="text" name="lastName" placeholder="Last Name" required>
    <label for="entity-last-name"></label>
  </div>
  <div class="input-field">
    <input id="entity-email" type="email" name="email" placeholder="Email" required>
    <label for="entity-email"></label>
  </div>
  <div class="input-field">
    <input id="entity-phone" type="tel" name="phone" placeholder="Phone">
    <label for="entity-phone"></label>
  </div>
  <div class="input-field">
    <input id="entity-sewing-level" type="text" name="sewingLevel" placeholder="Sewing Level">
    <label for="entity-sewing-level"></label>
  </div>
  <div class="input-field">
    <input id="entity-hours-willing" type="number" name="hoursWilling" placeholder="Hours Willing per Month">
    <label for="entity-hours-willing"></label>
  </div>
  
  `
}) %>